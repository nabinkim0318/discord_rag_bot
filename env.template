# ==================== Discord Bot Configuration ====================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_here
DISCORD_TEST_GUILD_ID=your_test_guild_id_here

# ==================== Backend API Configuration ====================
BACKEND_BASE=http://api:8001
API_TIMEOUT=30
HOST=0.0.0.0
PORT=8001
DEBUG=false

# ==================== Security Settings ====================
SECRET_KEY=your-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== Database Configuration ====================
DATABASE_URL=sqlite:///app/rag_kb.sqlite3
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/rag_db

# ==================== LLM Configuration ====================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o-mini
LLM_API_BASE_URL=https://api.openai.com/v1

# Azure OpenAI (alternative to OpenAI)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your_deployment_name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ==================== Embedding Configuration ====================
# OpenAI Embeddings
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# Alternative embedding providers
COHERE_API_KEY=your_cohere_api_key_here
JINA_API_KEY=your_jina_api_key_here

# ==================== Vector Database (Weaviate) ====================
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here
WEAVIATE_CLASS_NAME=KBChunk
WEAVIATE_BATCH_SIZE=100

# ==================== Token Budgets ====================
PROMPT_TOKEN_BUDGET=6000
GENERATION_MAX_TOKENS=512
CONTEXT_TOKEN_BUDGET=4000

# ==================== RAG Pipeline Configuration ====================
DEFAULT_TOP_K=5
MAX_TOP_K=20
BM25_WEIGHT=0.4
VECTOR_WEIGHT=0.6
MMR_LAMBDA=0.65

# ==================== Logging Configuration ====================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=logs
LOG_ROTATION=10 MB
LOG_RETENTION=7 days

# ==================== CORS Configuration ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8001,http://localhost:9090
CORS_ALLOW_CREDENTIALS=true

# ==================== Rate Limiting ====================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_USER=10
RATE_LIMIT_WINDOW=60

# ==================== Metrics & Monitoring ====================
METRICS_ENABLED=true
METRICS_PATH=/metrics

# ==================== Bot Settings ====================
BOT_PREFIX=!
MAX_QUERY_LENGTH=1000

# ==================== Development Settings ====================
# Set to true for development
DEVELOPMENT_MODE=false
RELOAD=false
